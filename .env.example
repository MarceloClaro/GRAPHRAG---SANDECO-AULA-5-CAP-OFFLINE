# ============================================
# GraphRAG Pipeline - Configuração Ambiental
# ============================================
# Copie este arquivo para .env.local e configure

# ============================================
# OLLAMA LOCAL (Recomendado)
# ============================================
# Antes: ollama serve
# Modelos: deepseek-coder, voyage-3, nomic-embed-text

VITE_OLLAMA_ENDPOINT=http://localhost:11434
VITE_ANALYSIS_MODEL=deepseek-coder
VITE_EMBEDDING_MODEL=voyage-3

# ============================================
# XIAOZHI.ME API (Fallback + Modelos Premium)
# ============================================
# Obter API key em: https://api.xiaozhi.me/console

VITE_XIAOZHI_API_KEY=sk_XXXXXXXXXXXXXXXXXXXXXXXX

# ============================================
# MONGODB ATLAS (Opcional - Vector Search)
# ============================================
# Configurar em: https://www.mongodb.com/cloud

VITE_MONGODB_CONNECTION_STRING=mongodb+srv://user:password@cluster.mongodb.net/graphrag
VITE_MONGODB_DATABASE=graphrag
VITE_MONGODB_COLLECTION=embeddings
VITE_MONGODB_VECTOR=true

# ============================================
# GOOGLE GEMINI (Fallback)
# ============================================
# Obter API key em: https://ai.google.dev

VITE_GEMINI_API_KEY=AIzaSy...

# ============================================
# BACKEND API
# ============================================
# Se usar backend Node.js/Python

VITE_BACKEND_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# ============================================
# LOGGING & DEBUG
# ============================================

VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
VITE_ENABLE_TRACING=true

# ============================================
# PERFORMANCE
# ============================================

VITE_MAX_CONCURRENT_REQUESTS=5
VITE_BATCH_SIZE_EMBEDDINGS=3
VITE_BATCH_SIZE_ANALYSIS=2
VITE_REQUEST_TIMEOUT=60000

# ============================================
# FEATURES
# ============================================

VITE_ENABLE_MONGODB_VECTOR_SEARCH=true
VITE_ENABLE_GRAPH_VISUALIZATION=true
VITE_ENABLE_RAG_LAB=true
VITE_ENABLE_CNN_REFINEMENT=true
